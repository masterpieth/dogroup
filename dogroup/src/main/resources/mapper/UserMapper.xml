<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dogroup.mybatis.UserMapper">
	<resultMap id="userMap" type="UserDTO">
		<id property="email" column="user_email"/>
		<result property="name" column="user_name"/>
		<result property="password" column="user_password"/>
		<result property="diligence" column="user_diligence"/>
		<result property="userBalance" column="user_balance"/>
		<result property="status" column="user_status"/>
	</resultMap>
	<!--사용자 정보 가져오기-->
	<select id="selectUserByEmail" parameterType="String" resultMap="userMap">
		SELECT
			*
		FROM users
		WHERE
			user_email = #{userEmail}
	</select>
	<!--회원가입-->
	<insert id="insertUser" parameterType="UserDTO">
		INSERT INTO users(
			user_email,
			user_name,
			user_password,
			user_diligence,
			user_balance,
			user_status
		) VALUES (
			#{email},
			#{name},
			#{password},
			50,
			0,
			1
		)
	</insert>
	<!--회원삭제-->
	<update id="updateUserStatus" parameterType="String">
		UPDATE users
		SET
			user_status = 0
		WHERE
			user_email = #{email}
	</update>
</mapper>